<div class="auth-form">

    <%=  form_with(model: @user, url: users_create_path) do |f| %>

        <div class="field">
            <%= f.label(:username, "Username", class: "label") %>
            <%= f.text_field(:username, class: "input") %>
        </div>
        <div class="field">
            <%= f.label(:email, "Email Address", class: "label") %>
            <%= f.email_field(:email, class: "input") %>
        </div>
        <div class="field">
            <%= f.label(:password, "Password", class: "label") %>
            <%= f.password_field(:password_hash, class: "input") %>
        </div>
        <div class="field no-shadow text-center">
            <%= f.submit("Create", class: "btn") %>
        </div>

        <div class="field no-shadow text-center sm-font">
            <%= link_to "Already have an account", sessions_new_path %>
        </div>

    <%  end %>

</div>