<div class="auth-form">
    <% if flash[:error]  %>
        <%= render :partial => 'shared/flash' %>
    <% end %>
    <% if flash[:notice]  %>
        <%= render :partial => 'shared/flash' %>
    <% end %>
    <%= form_with(model: @password, local: true, url: password_reset_path)  do |f| %>
        
        <div class="field">
            <%= f.label(:email, "Email", class: "label") %>
            <%= f.email_field(:email, class: "input") %>
        </div>
        <div class="field">
            <%= f.label(:password, "Password", class: "label") %>
            <%= f.password_field(:password, class: "input") %>
        </div>
        <div class="field">
            <%= f.label(:token, "Token", class: "label") %>
            <%= f.text_field(:token, class: "input") %>
        </div>
        <div class="field no-shadow text-center">
            <%= f.submit("Reset", class: "btn") %>
        </div>

    <% end %>
</div>