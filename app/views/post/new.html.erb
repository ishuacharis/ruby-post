<div class="post form">
    <% if flash[:alert]  %>
        <%= render :partial => 'shared/flash' %>
    <% end %>
    <%= form_with(model: @post, local: true,  url: post_index_path)  do |f| %>
        <div class="field">
            <%= label_tag(:content, "Post Title", class: 'label') %>
            <%= f.text_field(:title, class: 'input') %>
            <% if f.object.errors.any? &&  f.object.errors[:title] %>
                <div class="error">
                    <%= render :partial => "shared/error", :locals => {:errors => f.object.errors[:title] } %>
                </div>
            <% end %>
        </div>
        <div class="field">
            <%= label_tag(:content, "Post Content", class: 'label') %>
            <%= f.text_area(:content, size: "28x8", class: 'input') %>
            <% if f.object.errors.any? &&  f.object.errors[:content] %>
                <div class="error">
                   <%= render :partial => "shared/error", :locals => {:errors => f.object.errors[:content] } %>
                </div>
            <% end %>
        </div>
        <div class="field no-shadow text-center">
            <%= f.submit "Post" , class: 'btn' %>
        </div>

    <% end %>
</div>